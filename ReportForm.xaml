<Window x:Class="CarMaintainanceSystem.ReportForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarMaintainanceSystem"
        mc:Ignorable="d"
        Title="Report Form" Height="450" Width="800">
    <StackPanel Background="SkyBlue">
        <Grid Margin="15">
            <Label FontSize="30" FontFamily="Microsoft Sans Serif" FontWeight="ExtraBold">Select radio button to generate report</Label>
        </Grid>
        <StackPanel Margin="25">
            <GroupBox Content="Reports" Background="DeepSkyBlue" Opacity="80" BorderBrush="Aqua" FontSize="17"/>
            <RadioButton Name="radioButton1" Content="Monthly Consumable Report" FontSize="15"/>
            <RadioButton Name="radioButton2" Content="Monthly Consumer Visit Report" FontSize="15"/>
            <RadioButton Name="radioButton3" Content="Monthly Balancing and Alignment Report" FontSize="15"/>
            <RadioButton Name="radioButton4" Content="Monthly Worker Report" FontSize="15"/>

        </StackPanel>
        <Button Click="btnExit_Click" Name="btnExit" Width="75" HorizontalAlignment="Center" Content="Exit" FontSize="15"/>
    </StackPanel>
</Window>